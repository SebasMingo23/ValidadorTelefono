function wsforms_numverify_phone_validation() {
    ?>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            console.log("ðŸ“ž IntegraciÃ³n con NumVerify API activada para validaciÃ³n de telÃ©fonos...");

            const API_KEY = "2294414fc9ba083dc1e1a61c92166c97"; // ReemplazÃ¡ con tu API Key de NumVerify
            let isValidPhone = false;

            async function validatePhone(phoneField) {
                if (!phoneField || phoneField.hasAttribute("data-validated")) return;

                const form = phoneField.closest("form");
                const submitButton = form.querySelector("button[type='submit'], input[type='submit']");
                
                phoneField.placeholder = "Ej: 972165622"; // Solo los 9 nÃºmeros

                let warningMessage = document.createElement("span");
                warningMessage.style.color = "#e74c3c";
                warningMessage.style.fontSize = "14px";
                warningMessage.style.marginTop = "5px";
                warningMessage.style.display = "none";
                warningMessage.innerHTML = "âš ï¸ IngresÃ¡ un nÃºmero vÃ¡lido.";

                phoneField.parentNode.appendChild(warningMessage);

                phoneField.addEventListener("blur", async function () {
                    let phoneValue = phoneField.value.trim();

                    if (phoneValue.length !== 9) {
                        isValidPhone = false;
                        warningMessage.innerHTML = "âš ï¸ El nÃºmero debe tener 9 dÃ­gitos.";
                        warningMessage.style.display = "block";
                        phoneField.style.border = "2px solid red";
                        submitButton.disabled = true;
                        return;
                    }

                    let fullPhoneNumber = "+595" + phoneValue; // Concatenamos el cÃ³digo de paÃ­s

                    try {
                        let response = await fetch(`http://apilayer.net/api/validate?access_key=${API_KEY}&number=${encodeURIComponent(fullPhoneNumber)}&format=1`);
                        let data = await response.json();

                        console.log("ðŸ“ž Respuesta de NumVerify API:", data);

                        if (data.valid) {
                            isValidPhone = true;
                            warningMessage.style.display = "none";
                            phoneField.style.border = "2px solid green";
                            submitButton.disabled = false;
                            console.log("âœ… NÃºmero vÃ¡lido:", fullPhoneNumber);
                        } else {
                            warningMessage.innerHTML = "âš ï¸ NÃºmero invÃ¡lido.";
                            warningMessage.style.display = "block";
                            phoneField.style.border = "2px solid red";
                            isValidPhone = false;
                            submitButton.disabled = true;
                            console.warn("â›” NÃºmero invÃ¡lido:", fullPhoneNumber);
                        }
                    } catch (error) {
                        console.error("â›” Error en la validaciÃ³n con NumVerify API:", error);
                        warningMessage.innerHTML = "âš ï¸ Error al validar el nÃºmero.";
                        warningMessage.style.display = "block";
                        phoneField.style.border = "2px solid red";
                        isValidPhone = false;
                        submitButton.disabled = true;
                    }
                });

                // Bloquear el envÃ­o del formulario si el nÃºmero es invÃ¡lido
                form.addEventListener("submit", function (event) {
                    if (!isValidPhone) {
                        event.preventDefault();
                        warningMessage.style.display = "block";
                        phoneField.style.border = "2px solid red";
                        console.warn("â›” EnvÃ­o bloqueado: nÃºmero invÃ¡lido.");
                        return false;
                    }
                }, true);

                phoneField.setAttribute("data-validated", "true");
            }

            function waitForPhoneFields() {
                let observer = new MutationObserver(() => {
                    let phoneFields = document.querySelectorAll("input[type='tel']");
                    phoneFields.forEach(phoneField => validatePhone(phoneField));
                });

                observer.observe(document.body, { childList: true, subtree: true });
            }

            waitForPhoneFields();
        });
    </script>
    <?php
}
add_action('wp_footer', 'wsforms_numverify_phone_validation');
